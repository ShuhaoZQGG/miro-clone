# Production Environment Configuration Template
# Copy this file to .env.production and fill in your production values

# Application
NODE_ENV=production
NEXT_PUBLIC_APP_URL=https://your-domain.com
NEXT_PUBLIC_API_URL=https://api.your-domain.com
NEXT_PUBLIC_WS_URL=wss://ws.your-domain.com

# Database (PostgreSQL)
# Supabase: postgresql://postgres:[YOUR-PASSWORD]@db.[PROJECT-REF].supabase.co:5432/postgres
# Neon: postgresql://[user]:[password]@[endpoint-id].neon.tech/[dbname]?sslmode=require
DATABASE_URL=

# Redis Cache (Upstash)
REDIS_URL=
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=

# Authentication
JWT_SECRET=
JWT_EXPIRES_IN=7d
SESSION_SECRET=
COOKIE_SECURE=true
COOKIE_HTTPONLY=true
COOKIE_SAMESITE=strict

# Security
ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com
CSRF_SECRET=
ENCRYPTION_KEY=

# WebSocket Server (Railway/Render)
SOCKET_SERVER_URL=
SOCKET_ADMIN_USERNAME=
SOCKET_ADMIN_PASSWORD=
MAX_CONNECTIONS_PER_IP=10

# Email Service (SendGrid/Resend)
EMAIL_FROM=noreply@your-domain.com
EMAIL_PROVIDER=sendgrid
SENDGRID_API_KEY=
# OR
RESEND_API_KEY=

# File Storage (S3/Cloudinary)
STORAGE_PROVIDER=s3
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=
# OR
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# Monitoring & Analytics
SENTRY_DSN=
SENTRY_AUTH_TOKEN=
SENTRY_ORG=
SENTRY_PROJECT=
SENTRY_ENVIRONMENT=production
NEXT_PUBLIC_SENTRY_DSN=

# Vercel Analytics
NEXT_PUBLIC_ANALYTICS_ID=

# Google Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID=

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_WINDOW_MS=900000
AUTH_RATE_LIMIT_MAX_REQUESTS=5

# Admin Setup (Initial)
ADMIN_EMAIL=admin@your-domain.com
ADMIN_PASSWORD_HASH=

# Feature Flags
ENABLE_WEBSOCKET=true
ENABLE_OFFLINE_MODE=true
ENABLE_EXPORT_FEATURE=true
ENABLE_COLLABORATION=true
ENABLE_ANALYTICS=true

# Performance
MAX_BOARD_SIZE_MB=50
MAX_UPLOAD_SIZE_MB=10
CANVAS_CACHE_TTL_SECONDS=3600
API_TIMEOUT_MS=30000

# Scaling
INSTANCE_ID=
WORKER_THREADS=4
CLUSTER_ENABLED=false

# CDN
CDN_URL=https://cdn.your-domain.com
STATIC_ASSETS_URL=

# Third Party APIs
OPENAI_API_KEY=
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=

# Maintenance Mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE="We're currently performing maintenance. Please check back later."

# Debug (Set to false in production)
DEBUG_MODE=false
LOG_LEVEL=error